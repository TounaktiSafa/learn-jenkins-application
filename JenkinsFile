pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }

            steps {
                sh '''
                mkdir -p .npm-cache
                export npm_config_cache=$(pwd)/.npm-cache

                ls -la
                node --version
                npm --version
                npm ci
                npm run build
                ls -la
                '''
            }
     
       }
    
    stage ('Test'){

      steps{

        sh '''
        
        test -f build/index.html
        npm test
        '''
      }

    }
    
    
    
    }
}
